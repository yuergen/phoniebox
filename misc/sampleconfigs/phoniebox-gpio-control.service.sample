[Unit]
Description=Phoniebox GPIO Control Service
After=network.target iptables.service firewalld.service

[Service]
Type=simple
User=phonie
Group=phonie
WorkingDirectory=/home/phonie/phoniebox/components/gpio_control/
ExecStart=/home/phonie/phoniebox/components/gpio_control/gpio_control.py
SyslogIdentifier=PhonieboxGPIOControl
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
